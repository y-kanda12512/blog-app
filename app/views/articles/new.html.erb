<div class="container">
    <ul>
        <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <%= form_with(model: @article, url: articles_path , method: 'post',local: true) do |f| %>
    <div>
        <%= f.label:title,'タイトル' %>
    </div>
    <div>
        <%= f.text_field :title,class: 'text' %>
    </div>
    <div>
        <%= f.label:content %>
    </div>
    <div>
        <%= f.text_area :content %>
    </div>
    <div>
        <%= f.submit '保存',class: 'btn-primary' %>
    </div>
    <% end %>
</div>